@model Funcionario_Application.Models.Employee
@{
	ViewData["Title"] = "Detalhes do Funcionário";
}
<div class="container mt-1">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-10">
			<div class="card shadow-sm border rounded">
				<div class="card-header bg-primary text-white text-center py-3">
					<h2 class="mb-0">
						<i class="bi bi-person-circle me-2"></i> @Model.FullName
					</h2>
					<small class="fst-italic">ID do Funcionário: <span class="fw-semibold">@Model.Id</span></small>
				</div>
				<div class="card-body p-4">
					<div class="table-responsive">
						<table class="table table-borderless mb-0">
							<tbody>
								<tr>
									<th class="text-muted" style="width: 30%;">📧 E-mail</th>
									<td>
										<a href="mailto:@Model.Email" class="text-decoration-none fw-semibold text-primary">
											@Model.Email
										</a>
									</td>
								</tr>
								<tr>
									<th class="text-muted">💼 Cargo</th>
									<td class="fw-semibold">@Model.Designation?.Name</td>
								</tr>
								<tr>
									<th class="text-muted">🏢 Departamento</th>
									<td class="fw-semibold">@Model.Department?.Name</td>
								</tr>
								<tr>
									<th class="text-muted">🗓️ Data de Admissão</th>
									<td class="fw-semibold">@Model.HireDate.ToString("dd 'de' MMMM 'de' yyyy")</td>
								</tr>
								<tr>
									<th class="text-muted">🎂 Data de Nascimento</th>
									<td class="fw-semibold">@Model.DateOfBirth.ToString("dd 'de' MMMM 'de' yyyy")</td>
								</tr>
								<tr>
									<th class="text-muted">👔 Tipo de Funcionário</th>
									<td class="fw-semibold">@Model.EmployeeType?.Name</td>
								</tr>
								<tr>
									<th class="text-muted">⚧ Gênero</th>
									<td class="fw-semibold">@Model.Gender</td>
								</tr>
								<tr>
									<th class="text-muted">💰 Salário</th>
									<td class="fw-semibold">R$@Model.Salary.ToString("N2")</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="d-flex justify-content-center gap-3 mt-4">
						<a class="btn btn-success btn-lg px-4 rounded-pill shadow-sm" asp-action="Update" asp-route-id="@Model.Id">
							<i class="bi bi-pencil-fill me-2"></i> Editar
						</a>
						<a class="btn btn-danger btn-lg px-4 rounded-pill shadow-sm" asp-action="Delete" asp-route-id="@Model.Id">
							<i class="bi bi-trash-fill me-2"></i> Excluir
						</a>
						<a class="btn btn-info btn-lg px-4 rounded-pill shadow-sm text-white" asp-action="List">
							<i class="bi bi-arrow-left-circle-fill me-2"></i> Voltar à Lista
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
